{% extends 'index.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block content %}
{% for notification in notifications %}
    <div class="alert alert-{{ notification.type }}" role="alert">
        {{ notification.message }}
    </div>
{% endfor %}

<div class="container mt-4">
    <h1 class="fs-1">Liste des articles</h1>
    <div class="d-flex justify-content-center">
        <div class="w-50">
        <div class="list-group">
        {% for post in posts %}
        <a href="/BlogPHP/showPost/{{ post.postId }}" class="list-group-item list-group-item-action">
            <h5 class="mb-1">{{ post.title }}</h5>
            <p class="mb-1">{{ post.chapo }}</p>
            <small>Derni√®re modification : {{ post.updated_at|date('d/m/Y H:i') }}</small>
        </a>
        {% endfor %}
    </div>
        </div>
    </div>    
</div>
{% endblock %}
